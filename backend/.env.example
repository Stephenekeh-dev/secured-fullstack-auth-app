# .env.example

# Debug mode, set to True for development and False for production
DEBUG=True

# Django Secret Key (use a unique secret for production)
SECRET_KEY='your-secret-key-here'

# Database URL (this will be updated in your real .env file)
DATABASE_URL=postgres://user:pass@localhost:5432/db_name

# Allowed Hosts (you can add or change your allowed hosts in production)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS settings (update according to your frontend URLs)
CORS_ALLOWED_ORIGINS=http://localhost:4200

# CSRF trusted origins (add trusted origins)
CSRF_TRUSTED_ORIGINS=http://localhost:4200

# Session timeout in seconds (e.g., 30 minutes)
SESSION_COOKIE_AGE=1800

# Email settings (if you're using an email service)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend  # Change in production
EMAIL_HOST='smtp.example.com'
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER='your-email@example.com'
EMAIL_HOST_PASSWORD='your-email-password'
